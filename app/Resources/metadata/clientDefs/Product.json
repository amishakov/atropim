{
  "controller": "pim:controllers/product",
  "quickCreate": true,
  "navigateToEntityAfterQuickCreate": true,
  "quickCreateOptions": {
    "fullFormDisabled": true
  },
  "treeScopes": [
    "Category",
    "Product"
  ],
  "boolFilterList": [
    "onlyMy",
    "ownedByMe",
    "assignedToMe",
    "notEntity",
    "notAssociatedProducts",
    "notLinkedWithBrand",
    "withoutProductAttributes",
    "withoutMainImage",
    "notLinkedWithProductSerie",
    "onlyCatalogProducts",
    "linkedWithCategory",
    "linkedWithClassification",
    "notParents",
    "notChildren"
  ],
  "hiddenBoolFilterList": [
    "notEntity",
    "notAssociatedProducts",
    "notLinkedWithBrand",
    "notLinkedWithProductSerie",
    "onlyCatalogProducts",
    "linkedWithCategory",
    "linkedWithClassification",
    "notParents",
    "notChildren"
  ],
  "sidePanels": {
    "edit": [
      {
        "name": "mainImage",
        "unshift": true,
        "label": "mainImage",
        "view": "pim:views/fields/main-image"
      }
    ],
    "detail": [
      {
        "name": "mainImage",
        "unshift": true,
        "label": "mainImage",
        "view": "pim:views/fields/main-image"
      }
    ]
  },
  "menu": {
    "list": {
      "buttons": [
        {
          "acl": "read",
          "name": "list",
          "label": "",
          "link": "#Product/list",
          "title": "List",
          "iconHtml": "<span class=\"fa fa-th-list\"></span>"
        },
        {
          "acl": "read",
          "name": "plate",
          "label": "",
          "link": "#Product/plate",
          "title": "Plate",
          "iconHtml": "<span class=\"fa fa-th\"></span>"
        }
      ]
    },
    "plate": {
      "buttons": [
        {
          "acl": "read",
          "name": "list",
          "label": "",
          "link": "#Product/list",
          "title": "List",
          "iconHtml": "<span class=\"fa fa-th-list\"></span>"
        },
        {
          "acl": "read",
          "name": "plate",
          "label": "",
          "link": "#Product/plate",
          "title": "Plate",
          "iconHtml": "<span class=\"fa fa-th\"></span>"
        }
      ]
    }
  },
  "disabledMassActions": [
    "merge"
  ],
  "views": {
    "list": "pim:views/product/list",
    "detail": "pim:views/product/detail",
    "plate": "pim:views/product/plate"
  },
  "recordViews": {
    "list": "pim:views/product/record/list",
    "detail": "pim:views/product/record/detail",
    "search": "pim:views/product/record/search",
    "plate": "pim:views/product/record/plate",
    "plateItem": "pim:views/product/record/plate-item"
  },
  "massRelationView": "pim:views/product/modals/select-entity-and-records",
  "massUpdateView": "pim:views/product/modals/mass-update",
  "additionalPdfGeneratorDropdownItem": {
    "actionViewPath": "pim:views/product/actions/show-pdf-generator",
    "action": "showPdfGenerator"
  },
  "additionalPdfGeneratorRowActionItem": {
    "actionViewPath": "pim:views/product/actions/show-pdf-generator",
    "action": "showPdfGenerator"
  },
  "relationshipPanels": {
    "files": {
      "view": "pim:views/record/panels/files",
      "rowActionsView": "pim:views/record/row-actions/relationship-file",
      "dragDrop": {
        "isActive": true,
        "sortField": "product_file_mm.sorting"
      },
      "recordListView": "pim:views/file/record/list",
      "sortBy": "sorting",
      "asc": true,
      "selectAction": "selectRelatedEntity",
      "selectBoolFilterList": [
        "notEntity"
      ]
    },
    "parents": {
      "selectAction": "selectRelatedEntity",
      "selectBoolFilterList": [
        "notChildren"
      ],
      "rowActionsView": "views/record/row-actions/relationship-no-remove"
    },
    "children": {
      "selectAction": "selectRelatedEntity",
      "selectBoolFilterList": [
        "notParents"
      ],
      "dragDrop": {
        "isActive": true,
        "maxSize": 20,
        "sortField": "sortOrder"
      },
      "view": "pim:views/product/record/panels/children"
    },
    "productAttributeValues": {
      "createAction": "createRelatedConfigured",
      "selectAction": "selectRelatedEntity",
      "selectBoolFilterList": [
        "fromAttributesTab"
      ],
      "tabId": null,
      "rowActionsView": "pim:views/product-attribute-value/record/row-actions/relationship-no-unlink-in-product",
      "view": "pim:views/product/record/panels/product-attribute-values",
      "compareRecordsView": "pim:views/product/record/compare/product-attribute-values",
      "aclScopesList": [
        "Attribute",
        "AttributeGroup",
        "ProductAttributeValue"
      ]
    },
    "categories": {
      "create": false,
      "selectAction": "selectRelatedEntity",
      "selectBoolFilterList": [
        "notEntity",
        "onlyCatalogCategories",
        "onlyLeafCategories"
      ],
      "view": "pim:views/product/record/panels/categories"
    },
    "associatedMainProducts": {
      "layout": "listForAssociatedProductsInProduct",
      "label": "associatedProducts",
      "view": "pim:views/product/record/panels/associated-main-products"
    },
    "classifications": {
      "selectAction": "selectRelatedEntity",
      "view": "pim:views/product/record/panels/classifications"
    }
  },
  "dynamicLogic": {
    "fields": {
      "type": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "or",
              "value": [
                {
                  "type": "isNotEmpty",
                  "attribute": "id"
                },
                {
                  "type": "isNotEmpty",
                  "attribute": "_duplicatingEntityId"
                }
              ]
            }
          ]
        }
      },
      "sorting": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "sorting"
            }
          ]
        }
      }
    }
  }
}
