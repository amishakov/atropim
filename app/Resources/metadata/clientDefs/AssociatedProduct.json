{
  "controller": "controllers/record",
  "iconClass": "fas fa-link",
  "quickCreate": true,
  "quickCreateOptions": {
    "fullFormDisabled": true
  },
  "boolFilterList": [
    "onlyMy"
  ],
  "disabledMassActions": [
    "merge"
  ],
  "views": {
    "detail": "pim:views/detail",
    "list": "pim:views/list"
  },
  "recordViews": {
    "list": "pim:views/record/list"
  },
  "dynamicLogic": {
    "fields": {
      "mainProductImage": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      },
      "relatedProductImage": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      }
    }
  }
}