{
  "fields": {
    "name": {
      "type": "varchar",
      "required": true,
      "trim": true,
      "isMultilang": true
    },
    "code": {
      "type": "varchar",
      "required": true
    },
    "description": {
      "type": "text",
      "required": false,
      "rowsMax": 4,
      "lengthOfCut": 400
    },
    "sortOrder": {
      "type": "float",
      "required": true,
      "view": "pim:views/attribute-panel/fields/sort-order"
    },
    "createdAt": {
      "type": "datetime",
      "readOnly": true
    },
    "modifiedAt": {
      "type": "datetime",
      "readOnly": true
    },
    "createdBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "modifiedBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "attributes": {
      "type": "linkMultiple"
    }
  },
  "links": {
    "createdBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "modifiedBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "attributes": {
      "type": "hasMany",
      "foreign": "attributePanel",
      "entity": "Attribute"
    }
  },
  "collection": {
    "sortBy": "sortOrder",
    "asc": true
  }
}
